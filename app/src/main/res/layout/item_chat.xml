<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_chatLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/ll_temp"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">
            <!--用于定位中偏左-->
        </View>
        <TextView
            android:id="@+id/tv_chatTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017/7/18 12:22"
            android:visibility="gone"
            android:layout_marginTop="6dp"
            android:textColor="#444444"
            android:layout_toLeftOf="@id/ll_temp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/riv_headLeft"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/head70">
        </ImageView>
        <TextView
            android:id="@+id/tv_chatLeft"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:textColor="#444444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_left"
            android:textSize="17sp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="聊天内容左"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_chatRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/ll_temp1"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">
                <!--用于定位中偏左-->
            </LinearLayout>
            <TextView
                android:id="@+id/tv_chatTimeRight"
                android:layout_width="wrap_content"
                android:textColor="#444444"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content"
                android:text="2017/7/18 12:22"
                android:visibility="gone"
                android:layout_toRightOf="@id/ll_temp1"/>

        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_temp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/riv_headRight"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/head70">
                </ImageView>

                <TextView
                    android:id="@+id/tv_chatRight"
                    android:layout_marginRight="10dp"
                    android:textColor="#444444"
                    android:layout_toLeftOf="@id/riv_headRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chat_right"
                    android:textSize="17sp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:text="聊天内容右"/>
                <ImageView
                    android:id="@+id/iv_sendFail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_chatRight"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/send_fail16"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>


    </LinearLayout>

</RelativeLayout>